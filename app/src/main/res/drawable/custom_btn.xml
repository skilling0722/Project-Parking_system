<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="45"
                android:centerX="48%"
                android:centerColor="#666666"
                android:startColor="#242424"
                android:endColor="#757575"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="1dp"
                android:color="#757B80"
                />
        </shape>
    </item>

    <item android:state_pressed="false"
        android:state_enabled="false">
        <shape>
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="45"
                android:centerX="48%"
                android:centerColor="#292929"
                android:startColor="#000000"
                android:endColor="#292929"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>


    <item android:state_pressed="false"
        android:state_enabled="true">
        <shape>
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="45"
                android:centerX="44%"
                android:centerColor="#4A4A4A"
                android:startColor="#666666"
                android:endColor="#242424"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="1dp"
                android:color="#757B80"
                />
        </shape>
    </item>

</selector>