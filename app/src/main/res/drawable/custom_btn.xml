<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:color="@color/one"
tools:targetApi="lollipop"> <!-- ripple effect color -->


    <!-- 선택자 -->
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">

                    <corners
                        android:radius="35dp"
                        />
                    <gradient
                        android:angle="0"
                        android:centerColor="#9E7CEF"
                        android:endColor="#B070EB"
                        android:startColor="#8989F4" />
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#F7F3F3"
                        />
                </shape>
            </item>

            <item android:state_pressed="false"
                android:state_enabled="false">
                <shape>
                    <corners
                        android:radius="35dp"
                        />
                    <solid android:color="#12673AB7" /> <!-- background color -->

                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                </shape>
            </item>


            <item android:state_pressed="false"
                android:state_enabled="true">
                <shape>
                    <corners
                        android:radius="35dp"
                        />
                    <gradient
                        android:angle="0"
                        android:centerColor="#9E7CEF"
                        android:endColor="#B070EB"
                        android:startColor="#8989F4" />

                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#757B80"
                        />
                </shape>
            </item>

        </selector>
    </item>

</ripple>