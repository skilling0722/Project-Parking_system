<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/realmap_textview"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="실제 주차장"
        app:layout_constraintBottom_toTopOf="@+id/realmap_imgview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/realmap_imgview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/parkinglot_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realmap_textview"></ImageView>
</android.support.constraint.ConstraintLayout>